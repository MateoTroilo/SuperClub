<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
  <body>
    <div>
      <%- include('../partials/header', {showBar: false, showSantanderLogo:false}) %>
        <main class="main main-login">
          <div class="red-rectangle"></div>
          <form action="/login" method="post" class="login-container">
            <h2>¡Hola!</h2>
            <input id="email" type="email" placeholder="Tu email" name="email"
              value="<%= locals.old && old.email ? old.email : "" %>" />
            <% if (locals.errors && locals.errors["email"]) { %>
              <p class="warning-text">
                <%= errors["email"].msg %>
              </p>
              <% } %>

                <input id="password" type="password" placeholder="Tu contraseña" name="password" />

                <% if (locals.errors && locals.errors["password"]) { %>
                  <p class="warning-text">
                    <%= errors["password"].msg %>
                  </p>
                  <% } %>
                  
                  <div class="recuerdaUsuarioContainer">
                    <input type="checkbox" id="recordarUsuario" value="recordame" ></input>
                    <label for="recordarUsuario">Recuérdame</label>
                  </div>

                    <button disabled>Iniciar Sesión</button>
          </form>
          <div class="question">
            <a href="/register">¿No tienes cuenta? <span class="underline">Regístrate</span>
            </a>
          </div>
        </div>
        <%- include("../partials/errorLogin") %> 
          <%- include("../partials/footer") %>
  </body>

</html>
